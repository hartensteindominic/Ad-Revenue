<button class="tip-btn" onclick="sendTip()">SEND 0.01 ETH TIP</button>

<script>
    // REFRESH LOGIC
    let timeLeft = 60;
    setInterval(() => {
        timeLeft--;
        document.getElementById('timer').innerText = `CYCLE: ${timeLeft}s`;
        if (timeLeft <= 0) {
            ['ad1', 'ad2', 'ad3', 'ad4'].forEach(id => {
                const f = document.getElementById(id);
                f.src = f.src;
            });
            timeLeft = 60;
        }
    }, 1000);

    // WEB3 TIP LOGIC
    async function sendTip() {
        if (window.ethereum) {
            const web3 = new Web3(window.ethereum);
            await window.ethereum.enable();
            const accounts = await web3.eth.getAccounts();
            web3.eth.sendTransaction({
                from: accounts[0],
                to: "0x13B87B819252A81381C3Ce35e3Bd33199F4c6650",
                value: web3.utils.toWei('0.01', 'ether')
            });
        } else { alert("MetaMask not found!"); }
    }
</script>

